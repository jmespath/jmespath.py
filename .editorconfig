root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
tab_width = 4

[*.py]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 120
trim_trailing_whitespace = true

[*.{ebuild,sh,bash,initd}]
indent_style = tab
indent_size = 4
tab_width = 4
trim_trailing_whitespace = true
